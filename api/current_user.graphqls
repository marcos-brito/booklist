scalar Time
scalar UUID

extend type Query {
    me: CurrentUser
}

type CurrentUser {
    uuid: UUID!
    name: String!
    email: String!
    settings: Settings!
    lists: [List!]!
    collection: [CollectionItem!]!
}

type Settings {
    private: Boolean!
    showName: Boolean!
    showStats: Boolean!
    showCollection: Boolean!
    showListsFollows: Boolean!
    showAuthorsFollows: Boolean!
}
